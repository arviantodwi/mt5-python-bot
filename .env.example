# ------------------------------------------------------------------------------
#                        MetaTrader 5 Terminal Settings
# ------------------------------------------------------------------------------
# Path to the MetaTrader 5 terminal executable file. Optional.
# Type: String
# Default: C:\\Program Files\\MetaTrader 5\\terminal64.exe[]
TERMINAL_PATH       =

# ------------------------------------------------------------------------------
#                         MetaTrader 5 Account Settings
# ------------------------------------------------------------------------------
# User's login ID for account authentication. Required.
# Type: Number
ACCOUNT_USER        =

# User's password for account authentication. Required.
# Type: String
ACCOUNT_PASS        =

# Trading server to connect to when logging into the user's account. Required.
# Type: String
SERVER_ID          =

# ------------------------------------------------------------------------------
#                                Trade Settings
# ------------------------------------------------------------------------------
# Multiplier for the risk-to-reward ratio. Optional.
# Type: Decimal
# Default: 1.5
# Example: 2.0 (corresponds to a 1:2 risk-to-reward ratio)
RR                  =

# Percentage of risk per trade (e.g., 0.01 for 1%). Optional.
# Type: Decimal
# Default: 0.01
# Example: 0.02 (2% risk per trade)
RISK_PERCENTAGE     =

# Step size for lot increment or decrement. Optional.
# Type: Decimal
# Default: 0.01
# Example: 0.02 (lot steps would be 0.02 -> 0.04 -> 0.06)
LOT_STEP            =

# Trading symbol to watch by bot. Required.
# Type: String
# Example: XAUUSD, EURUSD, etc.
SYMBOL              =

# Candlestick timeframe in minutes. Optional.
# Type: Number
# Default: 5
# Example: 30 (30 minutes), 240 (4 hours), etc.
TIMEFRAME           =

# Session window start in local time (24 hour). Optional.
# Type: Number
# Default: 7
# Example: 10 (trading session start at 10am)
SESSION_START_HOUR  =

# Session window end in local time (24 hour). Can be overnight. Optional.
# Type: Number
# Default: 1
# Example: 23 (trading session end at 11pm)
SESSION_END_HOUR    =

# Ratio defining what constitutes a Doji candle. Optional.
# Type: Decimal
# Default: 0.1
# Example: 0.2 (considered a Doji if its body is 20% or less of its total range)
DOJI_RATIO          =

# Freeze window (in hours) that starts after a position is closed. Prevents new
# trades until the freeze period ends. Optional.
# Type: Float | None
# Default: None
# Example: 2 (wait 2 hours after closing before next trade)
FREEZE_HOURS        =

# Stop-loss nudge policy to satisfy broker minimum stop distance (stops level).
# Optional. Supported values:
# "off"          -> never adjust SL; skip trade if too close.
# "conservative" -> adjust SL only if required widening â‰¤ SL_NUDGE_FACTOR * planned distance.
# "flexible"     -> always adjust SL as needed.
# Type: "off" | "conservative" | "flexible"
# Default: "conservative"
SL_NUDGE_MODE       =

# Maximum allowed widening multiplier for conservative nudge mode. Ignored if
# SL_NUDGE_MODE="off" or "flexible". Optional.
# Type: Float
# Default: 1.5
# Example: 2.0  (allow up to 2x wider SL to meet broker rules)
SL_NUDGE_FACTOR     =

# ------------------------------------------------------------------------------
#                                 Bot Settings
# ------------------------------------------------------------------------------
# Time interval in seconds to poll for market rates. Optional.
# Type: Number
# Default: 1
# Example: 10 (10 seconds), etc.
RATE_POLLING_SEC    =

# Logging level to show in file and console. Optional.
# Type: DEBUG | INFO | WARNING | ERROR | CRITICAL
# Default: INFO
LOG_LEVEL           =
